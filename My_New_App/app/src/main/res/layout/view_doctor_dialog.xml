<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_doc_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/blue"
            android:gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:text="Doctor Isaac"
            android:textColor="@color/white"
            android:textSize="@dimen/default_title_size"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/book_doctor_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_baseline_bookmark_border_24"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:padding="15dp"
            android:text="Book this Doctor"
            android:textColor="@color/black"
            android:textSize="@dimen/my_text_size" />

        <TextView
            android:id="@+id/send_message_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_bubble_rounded_chat"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:padding="15dp"
            android:text="Send message"
            android:textColor="@color/black"
            android:textSize="@dimen/my_text_size" />

        <TextView
            android:id="@+id/view_doctor_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_baseline_help_outline_24"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:padding="15dp"
            android:text="View doctor"
            android:textColor="@color/black"
            android:textSize="@dimen/my_text_size" />

        <TextView
            android:id="@+id/report_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_outline_report_problem_24"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="Report this doctor"
            android:textColor="@color/red"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/my_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="20dp"
            android:alpha="0.3"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:src="@drawable/ic_outline_thumb_up_24" />

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:alpha="0.3"
                android:background="@color/black" />

            <ImageView
                android:id="@+id/unlike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:src="@drawable/ic_outline_thumb_down_24" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>